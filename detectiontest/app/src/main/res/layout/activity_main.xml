<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="i d"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pw_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="@id/id_txt"
        app:layout_constraintStart_toStartOf="@id/id_txt"
        app:layout_constraintTop_toTopOf="@id/id_txt" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@+id/pw_txt"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/pw_txt"
        app:layout_constraintTop_toTopOf="@+id/pw_txt">

        <TextView
            android:id="@+id/find_id_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#8977AD"
            android:text="아이디를 잊으셨나요?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/find_pw_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:backgroundTint="#8977AD"
            android:text="비밀번호를 잊으셨나요?"
            app:layout_constraintEnd_toEndOf="@+id/find_id_btn"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="@+id/find_id_btn"
            app:layout_constraintTop_toTopOf="@+id/find_id_btn" />

        <TextView
            android:id="@+id/create_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:backgroundTint="#8977AD"
            android:text="계정 만들기"
            app:layout_constraintEnd_toEndOf="@+id/find_pw_btn"
            app:layout_constraintStart_toStartOf="@+id/find_pw_btn"
            app:layout_constraintTop_toTopOf="@+id/find_pw_btn" />

        <TextView
            android:id="@+id/terms_and_condition_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:backgroundTint="#8977AD"
            android:text="이용약관"
            app:layout_constraintEnd_toEndOf="@+id/create_account_btn"
            app:layout_constraintStart_toStartOf="@+id/create_account_btn"
            app:layout_constraintTop_toTopOf="@+id/create_account_btn" />

        <TextView
            android:id="@+id/policy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:backgroundTint="#8977AD"
            android:text="개인정보 처리방침"
            app:layout_constraintEnd_toEndOf="@+id/terms_and_condition_btn"
            app:layout_constraintStart_toStartOf="@+id/terms_and_condition_btn"
            app:layout_constraintTop_toTopOf="@+id/terms_and_condition_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="127dp"
        android:layout_height="68dp"
        android:layout_marginTop="264dp"
        android:textSize="20dp"
        android:text="다   음"
        app:layout_constraintEnd_toEndOf="@+id/frame_layout"
        app:layout_constraintStart_toStartOf="@+id/frame_layout"
        app:layout_constraintTop_toTopOf="@+id/frame_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>